>>> class Test:
	a=10
	def __init__(self):
		self.b=20
	@classmethod
	def m1(cls):
		cls.a=888
		cls.b=999

		
>>> t1=Test()
>>> t2=Test()

>>> t1.m1()

>>> print('T1',t1.a,t1.b)		# T1 888 20

>>> print('T2',t2.a,t2.b)		# T2 888 20

>>> print(Test.a,Test.b)		# 888 999


